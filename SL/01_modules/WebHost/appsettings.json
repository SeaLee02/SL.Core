{
  //主机配置
  "Host": {
    //绑定URL
    "Urls": "http://localhost:6221"
  },
  //Serilog日志配置
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "WriteTo": [
      //输入到控制台
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ]
  },
  //模块化数据加载
  "SL": {
    //模块列表
    "Modules": [
      {
        //模块编码
        "Code": "Admin",
        "Db": {
          //数据库标识
          "ConfigId": "Admin",
          //数据库类型 0:mysql,1:sqlserver,
          "DbType": 0,
          //数据库连接字符串
          "ConnectionString": "server=127.0.0.1;database=m_admin;userid=root;password=123456"

          //"server=localhost;Database=M_Admin;Uid=root;Pwd=Admin123;Port=3306;Allow User Variables=True;"
          //"server=.;uid=sa;pwd=123456;database=M_Admin;Encrypt=True;TrustServerCertificate=True;"
        }
      }
    ],
    //身份认证与授权配置项
    "Auth": {
      //启用权限验证(生产环境慎重关闭)
      "EnablePermissionVerify": false,
      //启用验证码功能
      "EnableVerifyCode": false,
      //启用检测IP地址功能
      "EnableCheckIP": true,
      //Jwt配置
      "Jwt": {
        //密钥
        "Key": "twAJ$j5##pVc5*y&",
        //发行人
        "Issuer": "http://127.0.0.1:6221",
        //消费者
        "Audience": "http://127.0.0.1:6221",
        //令牌有效期，单位分钟，(默认120)
        "Expires": 120,
        //刷新令牌有效期(单位：天，默认7)
        "RefreshTokenExpires": 7
      }
    }, //缓存配置
    "Cache": {
      //Redis配置
      "Redis": {
        //默认数据库
        "DefaultDb": 0,
        //缓存键前缀
        "KeyPrefix": "Lh_",
        //链接字符串
        "ConnectionString": "127.0.0.1:6379,password=root"
      }
    }
  }
}
